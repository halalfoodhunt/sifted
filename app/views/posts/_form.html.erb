<%= bootstrap_form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.cktext_area :content, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>
  <div class="actions">
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-large btn-raised btn-primary" %>
  </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
    <div class="field">
      <%= f.date_select :date_published %>
    </div>
    <div class="field">
       <%= image_tag(@post.featured_image.url(:square), :class => "img-responsive") %><br>
      <%= f.file_field :featured_image, hide_label: true %>
    </div>
    <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name, autofocus: true, layout: :inline %>
    </div>
    <div class="field">
    <%= f.check_box :draft %>
    </div>
      <div class="actions">
    <%= f.submit 'Publish' %>
  </div>
  </div>
<% end %>
