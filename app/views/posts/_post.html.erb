<% @posts.each do |post| %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail padding-0 border-radius-0" style="height:420px;">
            <span class="label label-success" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= post.sub_category.name %></span>
            <%= image_tag post.featured_image.url(:square), :class => "img-responsive" %>
            <div class="caption">
              <h5><%= link_to post.title, post_path(post), :style => 'text-transform:none;' %></h5>
              <p>by <i><%= post.user.name %></i></p>
              <p><%= link_to 'Read More', post_path(post), :class => "btn btn-default" %></p>
            </div>
          </div>
        </div>
        <% end %>