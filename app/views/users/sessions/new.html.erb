<div class="col-md-6 col-md-offset-3" style="padding:25px; box-shadow: 0 27px 24px 0 rgba(0,0,0,.2),0 40px 77px 0 rgba(0,0,0,.22); background:rgba(255,255,255,0.6);">
    <p><center><h1>SIFTED</h1></center></p>
    <h3><center>LOGIN</center></h3>
    <hr>
    
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => 'btn btn-block btn-raised btn-primary' %>
    </div>

    <% end %>
    <hr>
    <p><center><%= render "devise/shared/links" %></center></p>
  </div>