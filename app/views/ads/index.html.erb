<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Ads</h1>

<table clas=="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Commencement date</th>
      <th>Expiry date</th>
      <th>Publish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.commencement_date %></td>
        <td><%= ad.expiry_date %></td>
        <td><%= ad.publish %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
</div>
